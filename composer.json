{
    "name": "lichtner/laravel-mock-api",
    "description": "Easy and smart mocking external APIs to simplify development",
    "keywords": [
        "lichtner",
        "laravel",
        "laravel-mock-api"
    ],
    "homepage": "https://github.com/lichtner/laravel-mock-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Marek Lichtner",
            "email": "marek.licht@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Lichtner\\MockApi\\": "src/",
            "Lichtner\\MockApi\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lichtner\\MockApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "php8.2 vendor/bin/phpstan analyse",
        "test": "php8.2 vendor/bin/pest",
        "test-coverage": "php8.2 vendor/bin/pest --coverage",
        "format": "php8.2 vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lichtner\\MockApi\\MockApiServiceProvider"
            ],
            "aliases": {
                "MockApi": "Lichtner\\MockApi\\Facades\\MockApi"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
